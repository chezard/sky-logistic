@{
    ViewData["Title"] = "Detail";
    DirectionOfTransportation directionOfTransportation = Model;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h2 class="mt-0 header-title">Detail</h2>
            <a asp-action="Index" class="btn btn-primary mb-3" style="justify-content:end">
                Go Back
            </a>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <tbody>
                    <tr>
                        <th scope="row">Id</th>
                        <td>
                            @directionOfTransportation.Id
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Type</th>
                        <td>
                            @directionOfTransportation.Type
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Description</th>
                        <td>
                            @Html.Raw(directionOfTransportation.Description)
                        </td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>