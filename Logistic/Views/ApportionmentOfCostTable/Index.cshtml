@{
    ViewData["Title"] = "Index";
    List<ApportionmentOfCostTable> apportionmentOfCostTables = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Xerclerin bolunmesi
                </h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="data-table  index w-100">
                        <thead>
                            <tr>
                                <th scope="row">Transport Document and Transport Document Table</th>
                                <th scope="row">Expense</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (ApportionmentOfCostTable apportionmentOfCostTable in apportionmentOfCostTables)
                            {
                                <tr>
                                    <td>
                                        SL @apportionmentOfCostTable.TransportDocumentTable.TransportDocumentId - @apportionmentOfCostTable.TransportDocumentTable.Id
                                    </td>
                                    <td>
                                        @apportionmentOfCostTable.Expense
                                    </td>
                                    <td>
                                        <a style="padding:10px" asp-action="Detail" asp-route-id="@apportionmentOfCostTable.Id" class="btn btn-success">Detail</a>
                                        <a style="padding:10px" asp-action="Update" asp-route-id="@apportionmentOfCostTable.Id" class="btn btn-warning">Edit</a>
                                        <a style="padding:10px" asp-action="Delete" asp-route-id="@apportionmentOfCostTable.Id" class="btn btn-danger delete">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

