@model ApportionmentOfCostTable
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group form-group-float w-lg-50">
                        <label>Transport Document Table</label>
                        <select class="custom-select " name="transportDocumentTableId">
                            @foreach (TransportDocumentTable transportDocumentTable in ViewBag.TransportDocumentTables)
                            {
                                if (Model.TransportDocumentTableId == transportDocumentTable.Id)
                                {
                                    <option selected value="@transportDocumentTable.Id">SL @transportDocumentTable.TransportDocumentId - @transportDocumentTable.Id</option>
                                }
                                else
                                {
                                    <option value="@transportDocumentTable.Id">SL @transportDocumentTable.TransportDocumentId - @transportDocumentTable.Id</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Expense">Expense</label>
                        <input asp-for="Expense" class="form-control" placeholder="Expense">
                        <span asp-validation-for="Expense" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount">Amount</label>
                        <input asp-for="Amount" class="form-control" placeholder="Amount">
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group form-group-float w-lg-50">
                        <label>Valyuta</label>
                        <select class="custom-select " name="valyutaId">
                            @foreach (Valyuta valyuta in ViewBag.Valyutas)
                            {
                                if (Model.ValyutaId == valyuta.Id)
                                {
                                    <option selected value="@valyuta.Id">@valyuta.Name</option>
                                }
                                else
                                {
                                    <option value="@valyuta.Id">@valyuta.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date">Date</label>
                        <input asp-for="Date" class="form-control" placeholder="Date">
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Note">Note</label>
                        <input asp-for="Note" class="form-control" placeholder="Note">
                        <span asp-validation-for="Note" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Edit</button>
                    <a asp-controller="TransportDocumentTable" asp-action="Detail" asp-route-id="@Model.TransportDocumentTableId" class="btn btn-secondary">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>

