@{
    ViewData["Title"] = "Index";
    List<AppUser> users = Model;
}

@{
    if (ViewBag.role == "Admin")
    {
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Şifərni Yeniləmək</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Ad</th>
                                        <th>Email</th>

                                        <th class="text-right pr-3">Əməliyyatlar</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in users)
                                    {
                                        <tr>
                                            <td>
                                                @user.Fullname
                                            </td>
                                            <td>
                                                @user.Email
                                            </td>
                                            <td class="d-flex justify-content-end">
                                                <a asp-controller="changepassword" asp-action="details" asp-route-id="@user.Id" class="btn btn-outline-success">Dəyişmək</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    if (ViewBag.role == "Moderator")
    {
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Şifərni Yeniləmək</h4>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Email</th>
                                        <th class="text-right pr-3">Əməliyyatlar</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            @ViewBag.Username
                                        </td>
                                        <td class="d-flex justify-content-end">
                                            <a asp-controller="changepassword" asp-action="details" asp-route-id="@ViewBag.Id" class="btn btn-outline-success">Etrafli</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    }
}