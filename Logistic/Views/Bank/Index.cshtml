@{
    ViewData["Title"] = "Index";
    List<Bank> banks = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Bank</h4>
                <a style="width:120px !important" asp-action="Create" class="btn btn-success ">Create</a>
                <div class="table-responsive">
                    <table class="data-table  index w-100">
                        <thead>
                            <tr>
                                
                                <th>Id</th>
                                <th>Name</th>
                                <th>Manager</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Bank bank in banks)
                            {
                            <tr>
                                <td>
                                    @bank.Id
                                </td>
                                <td>
                                    @bank.Name
                                </td>
                                <td>
                                    @bank.Manager
                                </td>
                                <td>
                                    <a style="padding:10px" asp-action="Detail" asp-route-id="@bank.Id" class="btn btn-success">Detail</a>
                                        <a style="padding:10px" asp-action="Update" asp-route-id="@bank.Id" class="btn btn-warning">Edit</a>
                                        <a style="padding:10px" asp-action="Delete" asp-route-id="@bank.Id" class="btn btn-danger delete">Delete</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

