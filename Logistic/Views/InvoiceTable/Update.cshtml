@model InvoiceTable
@{
    ViewData["Title"] = "Update";
}

<div class="row">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit</h4>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group form-group-float w-lg-50">
                        <label>Invoice Id</label>
                        <select class="custom-select " name="invoiceId">
                            @foreach (Invoice invoice in ViewBag.Invoices)
                            {
                                if (Model.InvoiceId == invoice.Id)
                                {
                                    <option selected value="@invoice.Id">@invoice.Id</option>
                                }
                                else
                                {
                                    <option value="@invoice.Id">@invoice.Id</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Name">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Product Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count">Count</label>
                        <input asp-for="Count" class="form-control" placeholder="Count">
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price">Price</label>
                        <input asp-for="Price" class="form-control" placeholder="Price">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary mr-2">Edit</button>
                    <a asp-controller="Invoice" asp-action="Detail" asp-route-id="@Model.InvoiceId" class="btn btn-secondary">Go back</a>
                </form>
            </div>
        </div>
    </div>
</div>

