@{
    ViewData["Title"] = "Index";
    List<InvoiceTable> invoiceTables = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Invoice Cədvəl</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="data-table  index w-100">
                        <thead>
                            <tr>

                                <th>Id</th>
                                <th>Invoice Id</th>
                                <th>Product Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (InvoiceTable invoiceTable in invoiceTables)
                            {
                                <tr>
                                    <td>
                                        @invoiceTable.Id
                                    </td>
                                    <td>
                                        @invoiceTable.Invoice.Id
                                    </td>
                                    <td>
                                        @invoiceTable.Name
                                    </td>
                                    <td>
                                        <a style="padding:10px" asp-action="Detail" asp-route-id="@invoiceTable.Id" class="btn btn-success">Detail</a>
                                        <a style="padding:10px" asp-action="Update" asp-route-id="@invoiceTable.Id" class="btn btn-warning">Edit</a>
                                        <a style="padding:10px" asp-action="Delete" asp-route-id="@invoiceTable.Id" class="btn btn-danger delete">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

