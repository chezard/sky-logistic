@{
    ViewData["Title"] = "Detail";
    UnofficialClient unofficialClient = Model;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h2 class="mt-0 header-title">Detail</h2>
            <a asp-action="Index" class="btn btn-primary mb-3" style="justify-content:end">
                Go Back
            </a>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>
                                @unofficialClient.Id
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Name</th>
                            <td>
                                @unofficialClient.Name
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Address</th>
                            <td>
                                @unofficialClient.Address
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Phone</th>
                            <td>
                                @unofficialClient.Phone
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Mail</th>
                            <td>
                                @unofficialClient.Mail
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>
                                @unofficialClient.Date
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">File</th>
                            <td>
                                <a href="~/files/@unofficialClient.FileName" target="_blank">@unofficialClient.FileName</a>
                                
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

