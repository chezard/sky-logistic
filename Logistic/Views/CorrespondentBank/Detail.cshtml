@{
    ViewData["Title"] = "Detail";
    CorrespondentBank correspondentBank = Model;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h2 class="mt-0 header-title">Detail</h2>
            <a asp-action="Index" class="btn btn-primary mb-3" style="justify-content:end">
                Go Back
            </a>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr>
                            <th scope="row">Id</th>
                            <td>
                                @correspondentBank.Id
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Correspondent Bank Type</th>
                            <td>
                                @correspondentBank.CorrespondentBankGroup.Name
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Name</th>
                            <td>
                                @correspondentBank.Name
                            </td>
                        </tr>

                       
                        <tr>
                            <th scope="row">Swift</th>
                            <td>
                                @correspondentBank.Swift
                            </td>
                        </tr>

                        <tr>
                            <th scope="row">M/H</th>
                            <td>
                                @correspondentBank.MH
                            </td>
                        </tr>

                        <tr>
                            <th scope="row">Description</th>
                            <td>
                                @Html.Raw(correspondentBank.Description)
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">File</th>
                            <td>
                                <a href="~/files/@correspondentBank.FileName" target="_blank">@correspondentBank.FileName</a>
                                
                            </td>
                            
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

