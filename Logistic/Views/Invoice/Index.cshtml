@{
    ViewData["Title"] = "Index";
    List<Invoice> invoices = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Invoice</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table data-ordering="false" class="data-table  index w-100">
                        <thead>
                            <tr>

                                <th>Id</th>
                                <th>Date</th>
                                <th>Invoice №</th>
                                <th>Contract №</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Invoice invoice in invoices)
                            {
                                <tr>
                                    <td>
                                        @invoice.Id
                                    </td>
                                    <td>
                                        @invoice.Date
                                    </td>
                                    <td>
                                        @invoice.InvoiceNumber
                                    </td>
                                    <td>
                                        @invoice.ContractNumber
                                    </td>

                                    <td>
                                        <a style="padding:10px" asp-action="Detail" asp-route-id="@invoice.Id" class="btn btn-success">Detail</a>
                                        <a style="padding:10px" asp-action="Pdf" asp-route-id="@invoice.Id" class="btn btn-success">Pdf</a>
                                        <a style="padding:10px" asp-action="Update" asp-route-id="@invoice.Id" class="btn btn-warning">Edit</a>
                                        <a style="padding:10px" asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-danger delete">Delete</a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>