@{
    ViewData["Title"] = "Detail";
    Country country = Model;

}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h2 class="mt-0 header-title">Detail</h2>
            <a asp-action="Index" class="btn btn-primary mb-3" style="justify-content:end">
                Go Back
            </a>
            <div class="table-responsive">
                <h3 class=" mt-5 " style="color:#297358">Country</h3>
                <table class="table table-bordered mb-3">
                    <thead>
                        <tr>
                            <th scope="row">Id</th>
                            <th scope="row">Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>
                                @Model.Id
                            </td>
                            <td>
                                @Model.Name
                            </td>
                        </tr>

                    </tbody>
                </table>
                <h3 class=" mt-5 " style="color:#297358">Cities</h3>
                <a asp-controller="City" asp-action="Create" class="btn btn-success mb-3">Create</a>

                <table id="myTable" style="width:100%" class="table mb-5 table-bordered table-hover table-sm ">
                    <thead class="thead-doc">
                        <tr>
                            <th>Id</th>
                            <th>Name </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (City city in ViewBag.Cities)
                        {
                            <tr>
                                <td>
                            @city.Id
                            </td>

                                <td>
                                    @city.Name
                                </td>
                                <td>
                                    <a asp-controller="City" asp-action="Update" asp-route-id="@city.Id" class="btn btn-warning">Edit</a>
                                    <a asp-controller="City" asp-action="Delete" asp-route-id="@city.Id" class="btn btn-danger delete">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>