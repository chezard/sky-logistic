@{
    ViewData["Title"] = "Detail";
    ApportionmentOfPaymentTable apportionmentOfPaymentTable = Model;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <h2 class="mt-0 header-title">Detail</h2>
            <a asp-action="Index" class="btn btn-primary mb-3" style="justify-content:end">
                Go Back
            </a>
            <div class="table-responsive">
                <table class="table table-bordered mb-0">
                    <tbody>
                        <tr>
                            <th scope="row">Transport Document and Transport Document Table</th>
                            <td>
                                SL @apportionmentOfPaymentTable.TransportDocumentTable.TransportDocumentId - @apportionmentOfPaymentTable.TransportDocumentTable.Id
                            </td>
                        </tr>
                    <tr>
                            <th scope="row">Amount</th>
                            <td>
                                @apportionmentOfPaymentTable.Amount
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Valyuta</th>
                            <td>
                                @apportionmentOfPaymentTable.Valyuta.Name
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Date</th>
                            <td>
                                @apportionmentOfPaymentTable.Date.ToShortDateString()
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Note</th>
                            <td>
                                @apportionmentOfPaymentTable.Note
                            </td>
                        </tr>
                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

