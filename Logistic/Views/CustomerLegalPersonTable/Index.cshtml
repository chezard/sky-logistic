@{
    ViewData["Title"] = "Index";
    List<CustomerLegalPersonTable> customerLegalPersonTables = Model;
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Müştəri Müqavile</h4>
                <a asp-action="Create" class="btn btn-primary">Create</a>
                <div class="table-responsive">
                    <table class="data-table  index w-100">
                        <thead>
                            <tr>
                                
                                <th>Id</th>
                                <th>Customer Legal Person Name</th>
                                <th>Contract Type</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (CustomerLegalPersonTable customerLegalPersonTable in customerLegalPersonTables)
                            {
                            <tr>
                                <td>
                                    @customerLegalPersonTable.Id
                                </td>
                                <td>
                                    @customerLegalPersonTable.CustomerLegalPerson.Name
                                </td>
                                <td>
                                    @customerLegalPersonTable.ContractType.Name
                                </td>
                                <td>
                                        <a style="padding:10px" asp-action="Detail" asp-route-id="@customerLegalPersonTable.Id" class="btn btn-success">Detail</a>
                                        <a style="padding:10px" asp-action="Update" asp-route-id="@customerLegalPersonTable.Id" class="btn btn-warning">Edit</a>
                                    @*<button type="button" class="btn btn-warning" data-toggle="modal" data-target="@("#UpdateCus-"+customerLegalPersonTable.Id)" data-url="@Url.Action($"Update/{customerLegalPersonTable.Id}")"> Update</button>
                                        @await Html.PartialAsync("_UpdateTable",customerLegalPersonTable)*@
                                        <a style="padding:10px" asp-action="Delete" asp-route-id="@customerLegalPersonTable.Id" class="btn btn-danger delete">Delete</a>
                                </td>

                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

